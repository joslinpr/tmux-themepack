#################### File: /paul/_theme-options-block.tmuxsh
# Set The Type Of Characters Used For Drawing Pane Borders.
# May Be One Of:  single | double | heavy | simple | number
%if #{==:#{version},3.2}
set-option -g pane-border-lines single
%endif

set -gF @theme-window-status-current-bg "#{@paul-color-main-1}"
set -gF @theme-window-status-current-fg "#{@paul-color-black-1}"
set -gF @theme-window-status-format " #{@themepack-window-status-format} "
set -gwF @theme-window-status-current-format " #{@themepack-window-status-current-format} "


# Override Separator
set -gwF @theme-window-status-separator "#[fg=#{@theme-window-status-current-bg}]#{@theme-window-status-separator}"

#################### End File: /paul/_theme-options-block.tmuxsh
