#
# Basic theme
#

# Themepack format options
set -g @themepack-status-left-area-left-format "#S"
set -g @themepack-status-left-area-middle-format "#I"
set -g @themepack-status-left-area-right-format "#P"
set -g @themepack-status-right-area-left-format "#H"
set -g @themepack-status-right-area-middle-format "%H:%M:%S"
set -g @themepack-status-right-area-right-format "%d-%b-%y"
set -g @themepack-window-status-current-format "#I:#W#F"
set -g @themepack-window-status-format "#I:#W#F"

# Customizable prefixes and suffixes for @themepack-* format options
set -g @themepack-status-left-area-left-prefix ""
set -g @themepack-status-left-area-left-suffix ""
set -g @themepack-status-left-area-middle-prefix ""
set -g @themepack-status-left-area-middle-suffix ""
set -g @themepack-status-left-area-right-prefix ""
set -g @themepack-status-left-area-right-suffix ""
set -g @themepack-status-right-area-left-prefix ""
set -g @themepack-status-right-area-left-suffix ""
set -g @themepack-status-right-area-middle-prefix ""
set -g @themepack-status-right-area-middle-suffix ""
set -g @themepack-status-right-area-right-prefix ""
set -g @themepack-status-right-area-right-suffix ""
set -g @themepack-window-status-current-prefix ""
set -g @themepack-window-status-current-suffix ""
set -g @themepack-window-status-prefix ""
set -g @themepack-window-status-suffix ""

# Apply prefixes and suffixes to @themepack-* format options
set -gF @themepack-status-left-area-left-format "#{@themepack-status-left-area-left-prefix}#{@themepack-status-left-area-left-format}#{@themepack-status-left-area-left-suffix}"
set -gF @themepack-status-left-area-middle-format "#{@themepack-status-left-area-middle-prefix}#{@themepack-status-left-area-middle-format}#{@themepack-status-left-area-middle-suffix}"
set -gF @themepack-status-left-area-right-format "#{@themepack-status-left-area-right-prefix}#{@themepack-status-left-area-right-format}#{@themepack-status-left-area-right-suffix}"
set -gF @themepack-status-right-area-left-format "#{@themepack-status-right-area-left-prefix}#{@themepack-status-right-area-left-format}#{@themepack-status-right-area-left-suffix}"
set -gF @themepack-status-right-area-middle-format "#{@themepack-status-right-area-middle-prefix}#{@themepack-status-right-area-middle-format}#{@themepack-status-right-area-middle-suffix}"
set -gF @themepack-status-right-area-right-format "#{@themepack-status-right-area-right-prefix}#{@themepack-status-right-area-right-format}#{@themepack-status-right-area-right-suffix}"
set -gF @themepack-window-status-current-format "#{@themepack-window-status-current-prefix}#{@themepack-window-status-current-format}#{@themepack-window-status-current-suffix}"
set -gF @themepack-window-status-format "#{@themepack-window-status-prefix}#{@themepack-window-status-format}#{@themepack-window-status-suffix}"

# Theme options
set -g @theme-clock-mode-colour blue
set -g @theme-clock-mode-style 24
set -g @theme-display-panes-active-colour red
set -g @theme-display-panes-colour blue
set -g @theme-message-bg yellow
set -g @theme-message-command-bg green
set -g @theme-message-command-fg black
set -g @theme-message-fg black
set -g @theme-mode-bg yellow
set -g @theme-mode-fg black
set -g @theme-pane-active-border-bg default
set -g @theme-pane-active-border-fg green
set -g @theme-pane-border-bg default
set -g @theme-pane-border-fg white
set -g @theme-status-bg green
set -g @theme-status-fg black
set -g @theme-status-interval 15
set -g @theme-status-justify left
set -g @theme-status-left "[#S] "
set -g @theme-status-left-bg green
set -g @theme-status-left-fg black
set -g @theme-status-left-length 40
set -g @theme-status-right " \"#H\" %H:%M %d-%b-%y"
set -g @theme-status-right-bg green
set -g @theme-status-right-fg black
set -g @theme-status-right-length 40
set -g @theme-window-status-activity-bg black
set -g @theme-window-status-activity-fg green
set -g @theme-window-status-current-bg green
set -g @theme-window-status-current-fg black
set -g @theme-window-status-current-format "#I:#W#F"
set -g @theme-window-status-format "#I:#W#F"
set -g @theme-window-status-separator " "

# Customizable prefixes and suffixes for @theme-* format options
set -g @theme-status-left-prefix ""
set -g @theme-status-left-suffix ""
set -g @theme-status-right-prefix ""
set -g @theme-status-right-suffix ""
set -g @theme-window-status-current-prefix ""
set -g @theme-window-status-current-suffix ""
set -g @theme-window-status-prefix ""
set -g @theme-window-status-suffix ""

# Apply prefixes and suffixes to @theme-* format options
set -gF @theme-status-left "#{@theme-status-left-prefix}#{@theme-status-left}#{@theme-status-left-suffix}"
set -gF @theme-status-right "#{@theme-status-right-prefix}#{@theme-status-right}#{@theme-status-right-suffix}"
set -gF @theme-window-status-current-format "#{@theme-window-status-current-prefix}#{@theme-window-status-current-format}#{@theme-window-status-current-suffix}"
set -gF @theme-window-status-format "#{@theme-window-status-prefix}#{@theme-window-status-format}#{@theme-window-status-suffix}"

# Apply @theme-* options to Tmux
set -gF  display-panes-active-colour "#{@theme-display-panes-active-colour}"
set -gF  display-panes-colour "#{@theme-display-panes-colour}"
set -gF  message-command-style "fg=#{@theme-message-command-fg},bg=#{@theme-message-command-bg}"
set -gF  message-style "fg=#{@theme-message-fg},bg=#{@theme-message-bg}"
set -gF  status-interval "#{@theme-status-interval}"
set -gF  status-justify "#{@theme-status-justify}"
set -gF  status-left "#{@theme-status-left}"
set -gF  status-left-length "#{@theme-status-left-length}"
set -gF  status-left-style "fg=#{@theme-status-left-fg},bg=#{@theme-status-left-bg}"
set -gF  status-right "#{@theme-status-right}"
set -gF  status-right-length "#{@theme-status-right-length}"
set -gF  status-right-style "fg=#{@theme-status-right-fg},bg=#{@theme-status-right-bg}"
set -gF  status-style "fg=#{@theme-status-fg},bg=#{@theme-status-bg}"
set -gwF clock-mode-colour "#{@theme-clock-mode-colour}"
set -gwF clock-mode-style "#{@theme-clock-mode-style}"
set -gwF mode-style "fg=#{@theme-mode-fg},bg=#{@theme-mode-bg}"
set -gwF pane-active-border-style "fg=#{@theme-pane-active-border-fg},bg=#{@theme-pane-active-border-bg}"
set -gwF pane-border-style "fg=#{@theme-pane-border-fg},bg=#{@theme-pane-border-bg}"
set -gwF window-status-activity-style "fg=#{@theme-window-status-activity-fg},bg=#{@theme-window-status-activity-bg}"
set -gwF window-status-current-format "#{@theme-window-status-current-format}"
set -gwF window-status-current-style "fg=#{@theme-window-status-current-fg},bg=#{@theme-window-status-current-bg}"
set -gwF window-status-format "#{@theme-window-status-format}"
set -gwF window-status-separator "#{@theme-window-status-separator}"
